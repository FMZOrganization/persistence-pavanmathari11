<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rgb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#618ACE</item>
        <item name="colorPrimaryVariant">#5B81BF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="redSwitch" parent="Theme.Rgb">
        <item name="colorAccent">#B3120A</item>
    </style>
    <style name="greenSwitch" parent="Theme.Rgb">
        <item name="colorAccent">#08850F</item>
    </style>
    <style name="blueSwitch" parent="Theme.Rgb">
        <item name="colorAccent">#061C9A</item>
    </style>
</resources>